<style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }
    
    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    
    tr:nth-child(even) {
      background-color: #dddddd;
    }
</style>
<table>
    <tr>
        <th>Data</th>
    </tr>
    <% for (var i = 0; i < tweets.statuses.length; i++) { %>
        <tr>
          <td><%= tweets.statuses[i].text %></td>
        </tr>    
    <% } %>
</table>